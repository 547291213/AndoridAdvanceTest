<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.xkfeng.andoridadvancetest.MainActivity">


    <LinearLayout
        android:id="@+id/ll_layout"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:textStyle="bold"
            android:gravity="center"
            android:text="Hello world"
            />
        <Button
            android:id="@+id/bt_OkhttpRxJava"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OkHttp Request"
            />

        <Button
            android:id="@+id/bt_RetrofitRxJava"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Retrofit Request"
            />

        <Button
            android:id="@+id/bt_GradleRequest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gradle Request"
            />

        <Button
            android:id="@+id/bt_toSecondAct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SecondActivity"

            />


        <fragment
            android:id="@+id/fg_butterfg"
            android:name="com.example.xkfeng.andoridadvancetest.ButterKnifeFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            />

        <ListView
            android:id="@+id/lv_GradleList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


        </ListView>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
